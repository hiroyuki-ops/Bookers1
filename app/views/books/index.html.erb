<table>
	<%= flash[:notice] %>
	<h1>Books</h1>
	<thead>
		<tr　aline="center">
			<th>title</th>
			<th>body</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
		<tr>
			<td>
				<%= book.title %>
			</td>
			<td>
				<%= book.body %>
			</td>
			<td>
				<%= link_to "Show", book_path(book.id) %>
			</td>
			<td>
				<%= link_to "Edit", edit_book_path(book.id) %>
			</td>
			<td>
				<%= link_to "Destroy", book_path(book.id), method: :delete,"data-confirm" => "Are you sure?" %>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>

<h3>New book</h3>
<!-- form_for部分 -->
<%=form_for(@book) do |f| %>
<%= render 'layouts/error_messages', model: f.object %>
  <h5>Title</h5>
  <%= f.text_field :title %>
  <h5>Body</h5>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>